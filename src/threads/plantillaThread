package threads;

public class plantillaThread extends Thread{
    private boolean running;

    public plantillaThread() {
        running = true;
    }

    @Override
    public void run() {
        while(running){
            
        }
    }
    
    public void stopRun(){
        this.running = false;
    }
    public void startRun(){
        this.running = true;
    }
}

